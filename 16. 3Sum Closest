class Solution {
    public int threeSumClosest(int[] nums, int target) {
        
        Arrays.sort(nums);
        // System.out.println(Arrays.toString(nums));

        int n=nums.length;
        int closetSum=1000000;
        for(int k=0;k<n-2;k++){
            int i=k+1;
            int j=n-1;

            while(i<j){
                int sum=nums[k]+nums[i]+nums[j];
                if(Math.abs(target-sum)<Math.abs(target-closetSum)){
                    closetSum=sum;
                }
                if(sum<target){
                    i++;
                }
                else{
                j--;
                }
            }
        }
        return closetSum;
    }
}
